{
    "name": "aiotu/terseq",
    "description": "Query Builder for AWS DynamoDB",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "analyse": "phpstan --level=5 --memory-limit=1G analyse src tests",
        "coverage": "XDEBUG_MODE=coverage phpunit ./tests --coverage-html ./coverage --color",
        "codecov": "phpunit --coverage-clover coverage.xml ./tests .phpunit.cache/code-coverage",
        "tests": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "Terseq\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Terseq\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Alex Ishutin",
            "email": "ishutin.alexey@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^7.0"
    },
    "require": {
        "php": "^8.3",
        "aws/aws-sdk-php": "^3.305",
        "loophp/collection": "^7.6",
        "nesbot/carbon": "^3.3"
    }
}
